<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :stock %><br>
    <%= f.text_field :stock %>
  </div>
  <div class="field">
    <%= f.label :price_in_cents %><br>
    <%= f.text_field :price_in_cents %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :released_at %><br>
    <%= f.datetime_select :released_at %>
  </div>
  <div class="field">
    <%= f.label :discontinued %><br>
    <%= f.check_box :discontinued %>
  </div>
	<div class="field">
    <%= f.label :tags %><br>
		<% for tag in Tag.all %>
			<div>
				<%= check_box_tag "product[tag_ids][]", tag.id, @product.tags.include?(tag)   %>
				<%= tag.name %>
			</div>
		<% end %>
	</div>
	<div class="field">
    <%= f.label :Category %><br>
		<%= collection_select(:product, :category_id, Category.all, :id, :name, prompt: true) %>
	</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
