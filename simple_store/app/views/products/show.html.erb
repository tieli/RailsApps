<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Released on:</strong>
  <%= @product.released_on %>
</p>

<p>
  <strong>Discontinued:</strong>
  <%= @product.discontinued %>
</p>

<p>
  <strong>Categories:</strong>
	<ul>
  <% @product.categories.each do |category| %>
		<li><%= category.name %></li>
	<% end %>
	</ul>
</p>

