<%= simple_form_for(@product) do |f| %>
	<%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :price_in_cents, hint: "price in cents" %>
  <%= f.input :stock %>
  <%= f.input :released_at, label: "Release Date" %>
  <%= f.input :discontinued %>
  <%= f.association :category %>
  <%= f.association :tags %>
  <%= f.error :base %>
  <%= f.button :submit %>
<% end %>

