
<h2>User Signup</h2>

<%= form_for(@user) do |f| %>
	<p>
	<%= f.label :email %> <br />
	<%= f.text_field :email %>
	</p>
	<p>
	<%= f.label :password %> <br />
	<%= f.password_field :password %>
	</p>
	<p>
	<%= f.label :password_confirmation %> <br />
	<%= f.password_field :password_digest %>
	</p>
	<p>
	<%= f.submit :Enter %>
	</p>
<% end %>
