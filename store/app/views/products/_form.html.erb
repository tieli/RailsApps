<%= simple_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<%= f.input :name %><br>
	<%= f.input :price, hint: "price should be in USD" %><br>
	<%= f.input :stock %><br>
	<%= f.input :released_on, label: "Release Date" %><br>
	<%= f.input :rating, collection: 1..5 %><br>
	<%= f.association :categories, collection: Category.all %><br>
	<%= f.association :publisher, collection: Publisher.all %><br>
	<%= f.input :discontinued %><br>
	<%= f.button :submit %>

<% end %>
