<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="pretty">
  <thead>
    <tr>
			<th>Name</th>
			<th>Price</th>
			<th>Released</th>
			<th>Publisher</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= product.price %></td>
        <td><%= product.released_on %></td>
        <td><%= product.publisher.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New', new_product_path %> |
<%= link_to 'Summary', summary_products_path %> |
<%= link_to 'All', products_path %>
