<h1>Sessions</h1>

<%= form_tag sessions_path do %>
	<div class="field">
		<%= label_tag :email, params[:email] %> <br />
		<%= text_field_tag :email, params[:email] %>
	</div>
	<div class="field">
		<%= label_tag :password, params[:password] %> <br />
		<%= password_field_tag :password, params[:password] %>
	</div>
	<p>
	<%= link_to "Forgotten Password", new_password_reset_path %>
	</p>
	<div class="field">
		<%= label_tag :remember_me %> <br />
		<%= check_box_tag :remember_me, 1, params[:remember_me] %>
	</div>
	<div class="action">
		<%= submit_tag "Log In" %>
	</div>
<% end %>
