<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @movie.image.url(:medium) %>
</p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Movie length:</strong>
  <%= @movie.movie_length %>
</p>

<p>
  <strong>Director:</strong>
  <%= @movie.director %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>

<% @movie.reviews.each do |review| %>

<div class="review">
	<p> <%= review.comment %> </p>
	<p> <%= review.rating %> </p>
</div>

<% end %>

<%= form_for([@movie, @movie.reviews.new]) do |f| %>
	<p>
	<%= f.label :comment %> <br />
	<%= f.text_field :comment %>
	</p>
	<p>
	<%= f.label :rating  %> <br />
	<%= f.text_field :rating  %>
	</p>
	<p>
	<%= f.submit %>
	</p>
<% end %>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
